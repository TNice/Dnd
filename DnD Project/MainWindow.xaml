<Window x:Name="Main" x:Class="DnD_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DnD_Project"
        mc:Ignorable="d"
        Title="Dungeons And Dragons Virtual Game Master" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <Button x:Name="newGameButton" Content="New Game" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="19,20,0,0" Height="20"/>
        <Button x:Name="continueButton" Content="Continue" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="19,50,0,0" Height="20"/>
        <Button x:Name="optionsButton" Content="Options" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="19,80,0,0" Height="20"/>
        <Button x:Name="exitButton" Content="Exit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="19,276,0,0" Height="20"/>

    </Grid>
</Window>
